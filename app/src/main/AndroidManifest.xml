<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ir.quantumsoft.al_sahifaal_sajjadiyya">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AboutActivity" />
        <activity android:name=".ArabicActivity" />
        <activity android:name=".EnglishActivity" />
        <activity android:name=".ArabicSuActivity" />
        <activity
            android:name=".SuppContextArActivity"
            android:label="@string/title_activity_supp_context_ar"
            android:parentActivityName=".ArabicSuActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ir.quantumsoft.al_sahifaal_sajjadiyya.ArabicSuActivity" />
        </activity>
        <activity android:name=".ArabicFavActivity" />
        <activity
            android:name=".ArabicFavSuppActivity"
            android:label="@string/title_activity_arabic_fav_supp"
            android:parentActivityName=".ArabicFavActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ir.quantumsoft.al_sahifaal_sajjadiyya.ArabicFavActivity" />
        </activity>
    </application>

</manifest>